!!! 5

%html
%head
  %title Tiwithole | The Fun New Twitter Party Game
  = csrf_meta_tag
  = stylesheet_link_tag("reset", "application")

%body
  = yield

  #welcome.splash
    .birdie
    %h1 Twithole Game
    %p Twithole is the fun new twitter based party game.
    %ol
      %li Invite 2-7 friends over,
      %li Grab your favorite drink,
      %li Laugh.

    %p= link_to("Play Now and Learn as You Go!", "#", :id => "play_game", :class => "button large go")
    %p= link_to("or check out the rules first", "#", :id => "rules_link")

  #footer
    &copy; 2010
    =link_to('SinCityRuby.com', 'http://sincityruby.com/',:target => "blank")
    &nbsp;|&nbsp;
    = link_to(raw("Terms &amp; Conditions"), "#", :id => 'terms_link')
    &nbsp;|&nbsp;
    = link_to(raw("FAQ"), "#", :id => "faq_link")
    &nbsp;|&nbsp;
    %span Designed for RailsRumble.com 2010

  :javascript
    var rumbleUrl = 'http://railsrumble.com';

  = javascript_include_tag("jquery.min", 'easing', 'game_helpers', 'game', :defaults)

